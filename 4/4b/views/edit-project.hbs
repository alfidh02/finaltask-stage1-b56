<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Creating Project Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/css/project.css" />
    <style>
      .active { font-weight: bold; color: black !important; }
    </style>
  </head>

  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary ps-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/assets/images/dumbways.png" style="width: 50px" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/add-hero"
              >Add Hero</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/add-type">Add Type</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <a href="/contact" class="btn btn-danger">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- end navbar -->

    <!-- form -->
    <div class="blog">
      <div>
        <div class="form-container">
          <form
            action="/edit-project/{{data.id}}"
            method="POST"
            style="display: flex; flex-direction: column; align-items: center"
          >
            <h1 class="text-center mt-3"><strong>UPDATE MY PROJECT</strong></h1>

            <div class="w-50">
              <div class="mb-3">
                <label for="input-blog-title" class="form-label mt-4">Hero Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="input-blog-title"
                  name="hero_name"
                  value="{{data.name}}"
                />
              </div>
               <div class="mb-3">
                <label
                  for="input-blog-content"
                  class="form-label"
                >Hero Type</label>
                <input
                  type="number"
                  class="form-control"
                  id="input-blog-content"
                  name="hero_type"
                  value={{data.type_id}}
                ></input>
              </div>

              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Submit
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- end form -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/project.js"></script>
  </body>
</html>